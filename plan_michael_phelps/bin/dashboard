#!/usr/bin/env bash
set -euo pipefail

ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
PORT="${1:-8787}"
URL="http://127.0.0.1:${PORT}/app/web/"

echo "Dashboard URL: ${URL}"
echo "Presiona Ctrl+C para detener el servidor."

exec python3 -m http.server "${PORT}" --bind 127.0.0.1 --directory "${ROOT}"
